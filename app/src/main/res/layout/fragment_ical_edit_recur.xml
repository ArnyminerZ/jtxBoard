<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <data>
        <import type="android.view.View" />
        <import type="at.techbee.jtx.UtilKt" />

        <variable
            name="model"
            type="at.techbee.jtx.ui.IcalEditViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/edit_recur_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:text="Recurrence"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="@{model.recurrenceVisible ? View.VISIBLE : View.GONE}"
            app:drawableStartCompat="@drawable/ic_recurring"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/edit_recur_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="@{model.recurrenceVisible ? View.VISIBLE : View.GONE}"
            android:checked="@={model.recurrenceChecked}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/edit_recur_header"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_header" />

        <TextView
            android:id="@+id/edit_recur_every"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="Repeat every"
            android:textAlignment="viewEnd"
            android:visibility="@{model.recurrenceGeneralVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintEnd_toStartOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_every_x_numberpicker" />

        <NumberPicker
            android:id="@+id/edit_recur_every_x_numberpicker"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="@{model.recurrenceGeneralVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toStartOf="@+id/edit_recur_days_months_spinner"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edit_recur_every"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_header" />

        <Spinner
            android:id="@+id/edit_recur_days_months_spinner"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/edit_recur_day_week_month_year"
            android:spinnerMode="dropdown"
            android:visibility="@{model.recurrenceGeneralVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_every_x_numberpicker"
            tools:text="Day/Week/Month/Year" />

        <TextView
            android:id="@+id/edit_recur_weekly_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="on"
            android:textAlignment="viewEnd"
            android:visibility="@{model.recurrenceWeekdaysVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_weekly_on_chipgroup_weekdays"
            app:layout_constraintEnd_toStartOf="@+id/edit_recur_weekly_on_chipgroup_weekdays"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_weekly_on_chipgroup_weekdays" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/edit_recur_weekly_on_chipgroup_weekdays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="@{model.recurrenceWeekdaysVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_every_x_numberpicker">

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Mo" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Tu" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="We" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Th" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Fr" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Sa" />

            <com.google.android.material.chip.Chip
                android:id="@+id/edit_recur_weekday_chip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                app:checkedIconVisible="false"
                tools:text="Su" />
        </com.google.android.material.chip.ChipGroup>


        <TextView
            android:id="@+id/edit_recur_on_the_x_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="on the"
            android:textAlignment="viewEnd"
            android:visibility="@{model.recurrenceDayOfMonthVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_on_the_x_month_numberPicker"
            app:layout_constraintEnd_toStartOf="@+id/edit_recur_on_the_x_month_numberPicker"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_on_the_x_month_numberPicker" />

        <NumberPicker
            android:id="@+id/edit_recur_on_the_x_month_numberPicker"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:visibility="@{model.recurrenceDayOfMonthVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_weekly_on_chipgroup_weekdays" />

        <TextView
            android:id="@+id/edit_x_of_the_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="day of the month"
            android:textAlignment="viewStart"
            android:visibility="@{model.recurrenceDayOfMonthVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_on_the_x_month_numberPicker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/edit_recur_on_the_x_month_numberPicker"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_on_the_x_month_numberPicker" />


        <NumberPicker
            android:id="@+id/edit_recur_until_x_occurences"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:visibility="@{model.recurrenceGeneralVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/edit_recur_every_x_numberpicker"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_on_the_x_month_numberPicker" />


        <TextView
            android:id="@+id/edit_recur_until_occurences"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="times"
            android:textAlignment="viewStart"
            android:visibility="@{model.recurrenceGeneralVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/edit_recur_until_x_occurences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_recur_until_x_occurences"
            app:layout_constraintTop_toTopOf="@+id/edit_recur_until_x_occurences" />

        <TextView
            android:id="@+id/edit_recur_last_occurence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last occurence: \n31.12.2021"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/edit_recur_until_x_occurences"
            app:layout_constraintStart_toStartOf="@+id/edit_recur_until_x_occurences"
            app:layout_constraintTop_toBottomOf="@+id/edit_recur_until_x_occurences" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>