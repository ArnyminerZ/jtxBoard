<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/collection_move_dialog_colorbar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_card_colored_edge"
        tools:ignore="ContentDescription"
        android:visibility="gone"
        tools:visibility="visible"
        tools:tint="#BC0D0D" />


    <ImageView
        android:id="@+id/collection_move_dialog_collection_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/collection_move_dialog_collection_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/collection_move_dialog_collection_spinner"
        app:srcCompat="@drawable/ic_collection"
        tools:ignore="ContentDescription" />

    <Spinner
        android:id="@+id/collection_move_dialog_collection_spinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:drawableStart="@drawable/ic_collection"
        android:drawablePadding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/collection_move_dialog_collection_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Collection" />

    <TextView
        android:id="@+id/collection_move_dialog_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/collection_dialog_move_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collection_move_dialog_collection_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>