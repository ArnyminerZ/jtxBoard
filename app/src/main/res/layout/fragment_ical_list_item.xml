<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/list_item_colorbar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/square_box"
            tools:tint="#BC0D0D"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/list_item_dtstart_day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_summary"
            tools:text="31" />

        <TextView
            android:id="@+id/list_item_dtstart_month"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/list_item_dtstart_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_dtstart_day"
            tools:text="December" />

        <TextView
            android:id="@+id/list_item_dtstart_year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/list_item_dtstart_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_dtstart_month"
            tools:text="2020" />

        <TextView
            android:id="@+id/list_item_dtstart_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/list_item_dtstart_day"
            app:layout_constraintTop_toBottomOf="@+id/list_item_dtstart_year"
            app:layout_constraintVertical_bias="0.0"
            tools:text="13:30" />


        <TextView
            android:id="@+id/list_item_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/list_item_due"
            app:layout_constraintStart_toEndOf="@+id/list_item_dtstart_day"
            app:layout_constraintTop_toBottomOf="@+id/list_item_colorbar"
            tools:text="Summary ... Lorem ipsum dolor sit amet" />

        <TextView
            android:id="@+id/list_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:minLines="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/list_item_dtstart_day"
            app:layout_constraintTop_toBottomOf="@+id/list_item_summary"
            tools:text="Description ... Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet." />


        <ImageView
            android:id="@+id/list_item_num_attendees_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/list_item_num_attendees_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_classification"
            app:srcCompat="@drawable/ic_attendee"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/list_item_num_attendees_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_num_attendees_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_num_attachments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_num_attendees_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_num_attachments_icon"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/list_item_num_attachments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_classification"
            app:srcCompat="@drawable/ic_attachment"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/list_item_num_attachments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_num_attachments_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_num_comments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_num_attachments_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_num_comments_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/list_item_num_comments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_classification"
            app:srcCompat="@drawable/ic_comments"
            app:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/list_item_num_comments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_num_comments_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_num_comments_icon"
            tools:text="0" />


        <TextView
            android:id="@+id/list_item_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/list_progress"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_progress_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_progress_slider" />

        <com.google.android.material.slider.Slider
            android:id="@+id/list_item_progress_slider"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:stepSize="1.0"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:layout_constraintEnd_toStartOf="@+id/list_item_progress_percent"
            app:layout_constraintStart_toEndOf="@+id/list_item_expand"
            app:layout_constraintTop_toBottomOf="@+id/list_item_categories" />


        <TextView
            android:id="@+id/list_item_progress_percent"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_progress_slider"
            app:layout_constraintEnd_toStartOf="@+id/list_item_progress_checkbox"
            app:layout_constraintTop_toTopOf="@+id/list_item_progress_slider"
            tools:text="100 %" />

        <CheckBox
            android:id="@+id/list_item_progress_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_progress_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_progress_slider" />


        <LinearLayout
            android:id="@+id/list_item_subtasks_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_progress_slider">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:clickable="true"
                android:focusable="true">


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


        <ImageView
            android:id="@+id/list_item_priority_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_priority"
            app:layout_constraintEnd_toStartOf="@+id/list_item_priority"
            app:layout_constraintTop_toTopOf="@+id/list_item_priority"
            app:srcCompat="@drawable/ic_priority"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/list_item_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_status_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_classification"
            tools:text="5 - Medium" />


        <ImageView
            android:id="@+id/list_item_status_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_status"
            app:layout_constraintEnd_toStartOf="@+id/list_item_status"
            app:layout_constraintTop_toTopOf="@+id/list_item_status"
            app:srcCompat="@drawable/ic_status"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_classification_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_classification"
            tools:text="Final" />


        <ImageView
            android:id="@+id/list_item_classification_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_classification"
            app:layout_constraintTop_toTopOf="@+id/list_item_classification"
            app:srcCompat="@drawable/ic_classification"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/list_item_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_description"
            tools:text="Public" />

        <TextView
            android:id="@+id/list_item_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/list_item_summary"
            app:layout_constraintTop_toBottomOf="@+id/list_item_num_attendees_icon"
            tools:text="Category1, Category2" />

        <TextView
            android:id="@+id/list_item_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_summary"
            tools:text="Due in 365 days" />

        <ImageView
            android:id="@+id/list_item_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_progress_label"
            app:layout_constraintStart_toEndOf="@+id/list_item_progress_label"
            app:layout_constraintTop_toTopOf="@+id/list_item_progress_label"
            app:srcCompat="@drawable/ic_expand"
            android:contentDescription="@string/list_expand" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>