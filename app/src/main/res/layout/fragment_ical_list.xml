<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vJournalListViewModel"
            type="at.bitfire.notesx5.ui.IcalListViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutJournalNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/journals_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:icon="@drawable/ic_vjournal_date"
                    android:text="@string/list_tabitem_journals" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/notes_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:icon="@drawable/ic_vjournal_note"
                    android:text="@string/list_tabitem_notes" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/todos_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:icon="@drawable/ic_todo"
                    android:text="@string/list_tabitem_todos" />

            </com.google.android.material.tabs.TabLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vjournal_list_items_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tabLayoutJournalNotes"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager">


            </androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/list_fab_add_contentdesc"
            app:srcCompat="@drawable/ic_vjournal_add"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>




