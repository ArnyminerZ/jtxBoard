<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    android:id="@+id/view_subtask_cardview">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/view_subtask_textview"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_subtask_progress_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_subtask_progress_slider"
            tools:text="Task #1 ..." />

        <com.google.android.material.slider.Slider
            android:id="@+id/view_subtask_progress_slider"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stepSize="1.0"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:layout_constraintStart_toEndOf="@+id/view_subtask_textview"
            app:layout_constraintEnd_toStartOf="@id/view_subtask_progress_percent"
            app:layout_constraintTop_toTopOf="parent" />






        <TextView
            android:id="@+id/view_subtask_progress_percent"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/view_subtask_progress_slider"
            app:layout_constraintEnd_toStartOf="@+id/view_subtask_progress_percent_sign"
            app:layout_constraintTop_toTopOf="@+id/view_subtask_progress_slider"
            tools:text="100" />

        <TextView
            android:id="@+id/view_subtask_progress_percent_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="%"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="@+id/view_subtask_progress_slider"
            app:layout_constraintEnd_toStartOf="@+id/view_subtask_progress_checkbox"
            app:layout_constraintTop_toTopOf="@+id/view_subtask_progress_slider" />




        <CheckBox
            android:id="@+id/view_subtask_progress_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/view_subtask_progress_slider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_subtask_progress_slider" />



    </androidx.constraintlayout.widget.ConstraintLayout>





</com.google.android.material.card.MaterialCardView>
