<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_note_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/list_item_note_colorbar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/square_box"
            tools:ignore="ContentDescription"
            tools:tint="#FFF"
            app:tint="?attr/colorSurfaceVariant" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            app:flow_verticalAlign="top"
            app:layout_constraintBottom_toTopOf="@id/list_item_note_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_colorbar"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Summary ... Lorem ipsum dolor sit amet" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            app:flow_verticalAlign="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/list_item_note_summary"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_summary"
            tools:text="Description ... Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet." />
        

        <ImageView
            android:id="@+id/list_item_note_status_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_status"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_status"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_status"
            app:srcCompat="@drawable/ic_status"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_classification_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_classification"
            tools:text="Final" />


        <ImageView
            android:id="@+id/list_item_note_classification_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_classification"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_classification"
            app:srcCompat="@drawable/ic_classification"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_attachments"
            tools:text="Public" />


        <LinearLayout
            android:id="@+id/list_item_note_attachments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/list_item_note_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_description" />

        <ImageView
            android:id="@+id/list_item_note_num_attendees_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_attendees_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_num_attendees_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_classification"
            app:srcCompat="@drawable/ic_attendee"
            app:tint="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_num_attendees_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_num_attendees_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_num_attachments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_num_attendees_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_note_num_attachments_icon"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_attachments_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_num_attachments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_classification"
            app:srcCompat="@drawable/ic_attachment"
            app:tint="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_num_attachments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_num_attachments_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_num_comments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_num_attachments_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_note_num_comments_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_comments_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_note_num_comments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_classification"
            app:srcCompat="@drawable/ic_comments"
            app:tint="@android:color/darker_gray" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_num_comments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_note_num_comments_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_note_num_comments_icon"
            tools:text="0" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_note_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_note_classification"
            tools:text="Category1, Category2" />



        <LinearLayout
            android:id="@+id/list_item_note_subtasks_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_note_categories" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>