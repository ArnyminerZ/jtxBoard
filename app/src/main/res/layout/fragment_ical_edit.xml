            app:endIconContentDescription="Set completed time"
            app:endIconDrawable="@drawable/ic_vjournal_time"
            app:endIconMode="custom"
            app:helperText="Set completed time"
            app:helperTextEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_completed_date"
            app:layout_constraintTop_toTopOf="@+id/edit_completed_date">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_completed_time_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="time"
                android:text="@{model.completedtimeFormated}"/>

        </com.google.android.material.textfield.TextInputLayout>


        <ImageView
            android:id="@+id/edit_completedtimezone_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="@{model.completedtimeVisible ? View.VISIBLE : View.GONE}"
