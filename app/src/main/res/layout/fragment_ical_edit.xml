            android:onClick="@{() -> model.savingClicked()}"
            app:srcCompat="@drawable/ic_vjournal_save"
            android:contentDescription="@string/edit_fab_save_contentDescription" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


