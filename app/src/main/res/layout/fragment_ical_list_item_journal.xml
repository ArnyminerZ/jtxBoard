<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_journal_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/list_item_journal_colorbar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_card_colored_edge"
        app:tint="?attr/colorSurfaceVariant"
        tools:ignore="ContentDescription"
        tools:tint="#FFF" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_summary_barrier"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Collection" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_summary_barrier"
            app:layout_constraintEnd_toStartOf="@id/list_item_journal_upload_pending_icon"
            app:layout_constraintStart_toEndOf="@id/list_item_journal_collection"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Category1, Category2" />


        <ImageView
            android:id="@+id/list_item_journal_upload_pending_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_recurring_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_upload_pending"
            android:contentDescription="@string/list_item_upload_pending"/>


        <ImageView
            android:id="@+id/list_item_journal_recurring_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintEnd_toEndOf="@+id/list_item_journal_summary"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_recurring"
            android:contentDescription="@string/list_item_recurring"/>



        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/list_item_journal_summary_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            tools:layout_editor_absoluteY="376dp" />



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_dtstart_day"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_dtstart_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_journal_summary_barrier"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="31" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_dtstart_month"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_dtstart_year"
            app:layout_constraintEnd_toEndOf="@+id/list_item_journal_dtstart_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_dtstart_day"
            tools:text="December" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_dtstart_year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_dtstart_time"
            app:layout_constraintEnd_toEndOf="@+id/list_item_journal_dtstart_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_dtstart_month"
            app:layout_constraintVertical_bias="0.0"
            tools:text="2020" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_dtstart_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_dtstart_timezone"
            app:layout_constraintStart_toStartOf="@+id/list_item_journal_dtstart_day"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_dtstart_year"
            tools:text="13:30" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_dtstart_timezone"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_barrier"
            app:layout_constraintStart_toStartOf="@+id/list_item_journal_dtstart_day"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_dtstart_time"
            app:layout_constraintVertical_bias="0.0"
            tools:text="GMT+02:00" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:flow_verticalAlign="top"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/list_item_journal_dtstart_day"
            app:layout_constraintTop_toBottomOf="@id/list_item_journal_summary_barrier"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Summary ... Lorem ipsum dolor sit amet" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            app:flow_verticalAlign="top"
            app:layout_constraintBottom_toTopOf="@id/list_item_journal_barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/list_item_journal_summary"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_summary"
            tools:text="Description ... Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet." />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/list_item_journal_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            tools:layout_editor_absoluteY="510dp" />


        <ImageView
            android:id="@+id/list_item_journal_status_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_status"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_status"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_status"
            app:srcCompat="@drawable/ic_status"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_classification_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_classification"
            tools:text="Final" />


        <ImageView
            android:id="@+id/list_item_journal_classification_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_classification"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_classification"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_classification"
            app:srcCompat="@drawable/ic_classification"
            tools:ignore="ContentDescription" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_attachments"
            tools:text="Public" />


        <LinearLayout
            android:id="@+id/list_item_journal_attachments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/list_item_journal_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_barrier" />

        <ImageView
            android:id="@+id/list_item_journal_num_attendees_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_attendees_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_num_attendees_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_classification"
            app:srcCompat="@drawable/ic_attendee"  />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_num_attendees_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_num_attendees_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_num_attachments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_num_attendees_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_journal_num_attachments_icon"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_attachments_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_num_attachments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_classification"
            app:srcCompat="@drawable/ic_attachment" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_num_attachments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_num_attachments_icon"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_num_comments_icon"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_num_attachments_icon"
            tools:text="0" />

        <ImageView
            android:id="@+id/list_item_journal_num_comments_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/list_num_comments_contentdesc"
            app:layout_constraintEnd_toStartOf="@+id/list_item_journal_num_comments_text"
            app:layout_constraintTop_toBottomOf="@+id/list_item_journal_classification"
            app:srcCompat="@drawable/ic_comments" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/list_item_journal_num_comments_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/list_item_journal_num_comments_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/list_item_journal_num_comments_icon"
            tools:text="0" />


        <LinearLayout
            android:id="@+id/list_item_journal_subtasks_linearlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical"
            android:showDividers="middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_journal_classification" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>