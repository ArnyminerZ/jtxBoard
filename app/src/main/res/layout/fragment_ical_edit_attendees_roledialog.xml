<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_attendees_roledialog_view">

    <ImageView
        android:id="@+id/edit_attendees_roledialog_chair_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_attendee_reqparticipant"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_attendees_roledialog_chair_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/edit_attendees_roledialog_chair"
        app:layout_constraintBottom_toBottomOf="@+id/edit_attendees_roledialog_chair_icon"
        app:layout_constraintStart_toEndOf="@+id/edit_attendees_roledialog_chair_icon"
        app:layout_constraintTop_toTopOf="@+id/edit_attendees_roledialog_chair_icon" />

    <ImageView
        android:id="@+id/edit_attendees_roledialog_required_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_attendees_roledialog_chair_icon"
        app:srcCompat="@drawable/ic_attendee_reqparticipant"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_attendees_roledialog_required_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/edit_attendees_roledialog_required"
        app:layout_constraintBottom_toBottomOf="@+id/edit_attendees_roledialog_required_icon"
        app:layout_constraintStart_toEndOf="@+id/edit_attendees_roledialog_required_icon"
        app:layout_constraintTop_toTopOf="@+id/edit_attendees_roledialog_required_icon" />

    <ImageView
        android:id="@+id/edit_attendees_roledialog_optional_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_attendees_roledialog_required_icon"
        app:srcCompat="@drawable/ic_attendee_optparticipant"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_attendees_roledialog_optional_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/edit_attendees_roledialog_optional"
        app:layout_constraintBottom_toBottomOf="@+id/edit_attendees_roledialog_optional_icon"
        app:layout_constraintStart_toEndOf="@+id/edit_attendees_roledialog_optional_icon"
        app:layout_constraintTop_toTopOf="@+id/edit_attendees_roledialog_optional_icon" />

    <ImageView
        android:id="@+id/edit_attendees_roledialog_nonparticipant_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_attendees_roledialog_optional_icon"
        app:srcCompat="@drawable/ic_attendee_nonparticipant"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_attendees_roledialog_nonparticipant_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/edit_attendees_roledialog_nonparticipant"
        app:layout_constraintBottom_toBottomOf="@+id/edit_attendees_roledialog_nonparticipant_icon"
        app:layout_constraintStart_toEndOf="@+id/edit_attendees_roledialog_nonparticipant_icon"
        app:layout_constraintTop_toTopOf="@+id/edit_attendees_roledialog_nonparticipant_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>