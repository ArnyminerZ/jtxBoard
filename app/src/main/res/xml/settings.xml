<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:key="settings_display"
        app:title="Display settings">


    <SwitchPreference
        app:key="settings_enfore_dark_theme"
        app:defaultValue="false"
        app:title="Enforce dark theme"
        app:icon="@drawable/ic_theme"
        app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="settings_list"
        app:title="Settings for the item list">

        <SwitchPreference
            app:key="settings_show_subtasks_in_list"
            app:defaultValue="true"
            app:title="Show subtasks in list"
            app:icon="@drawable/ic_todo"
            app:useSimpleSummaryProvider="true"/>

        <SwitchPreference
            app:key="settings_show_attachments_in_list"
            app:defaultValue="true"
            app:title="Show attachments in list"
            app:icon="@drawable/ic_attachment"
            app:useSimpleSummaryProvider="true"/>


    </PreferenceCategory>

    <PreferenceCategory
        app:key="settings_format"
        app:title="Format Settings">

        <DropDownPreference
            app:key="setting_audio_format"
            app:entries="@array/settings_audio_formats"
            app:entryValues="@array/settings_audio_formats"
            app:title="Select Mimetype for audio notes"
            app:icon="@drawable/ic_audio"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="gdpr"
        app:title="GDPR Ad Settings">

        <Preference
            app:key="show_user_consent"
            app:summary="Show User Consent"
            app:title="Show User Consent for Ad Settings"/>

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
